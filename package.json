{
  "name": "chatcode-hub",
  "displayName": "ChatCode Hub",
  "description": "Vscore plugin for creating private chat rooms",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.chatCodeMessageInput"
  ],
  "main": "./dist/extension.js",
  "icon": "resources/icon.png",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "chatcode-hub",
          "title": "Chat Code",
          "icon": "resources/sideBar-icon.svg"
        }
      ]
    },
    "views": {
      "chatcode-hub": [
        {
          "id": "chatcode-hub",
          "type": "webview",
          "name": "Chat Code"
        }
      ]
    },
    "commands": [
      {
        "command": "chatcode-hub.createServer",
        "title": "ChatCode create server"
      },
      {
        "command": "chatcode-hub.login",
        "title": "Sign In",
        "category": "chatcode-hub",
        "icon": {
          "light": "resources/light/login.svg",
          "dark": "resources/dark/login.svg"
        }
      },
      {
        "command": "chatcode-hub.signout",
        "title": "Sign Out",
        "category": "chatcode-hub"
      }
    ],
    "keybindings": [
      {
        "command": "extension.chatCodeMessageInput",
        "key": "ctrl+alt+o",
        "mac": "ctrl+cmd+o",
        "when": "extension.chatCodeMessageInput"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "chatcode-hub.login",
          "group": "navigation",
          "when": "view == chatcode-hub"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "bufferutil": "^4.0.8",
    "utf-8-validate": "^6.0.3",
    "ws": "^8.16.0"
  }
}
